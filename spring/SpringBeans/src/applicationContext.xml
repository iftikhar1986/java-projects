<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Define an Engine bean (V6 type) -->
    <bean id="engine" class="com.example.beans.Engine">
        <constructor-arg value="V6" />
    </bean>

    <!-- Define a Car bean with Engine as a nested bean -->
    <bean id="car" class="com.example.beans.Car" scope="singleton">
        <constructor-arg ref="engine" />
        <property name="brand" value="BMW" />
    </bean>

    <!-- Define a Truck bean that inherits from Car -->
    <bean id="truck" class="com.example.beans.Truck" parent="car" scope="prototype">
        <constructor-arg value="10" /> <!-- Capacity of the truck -->
    </bean>

    <!-- BeanPostProcessor example -->
    <bean class="com.example.beans.MyBeanPostProcessor" />

</beans>
